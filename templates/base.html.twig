<!DOCTYPE html>
<html lang="fr">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Template de base pour le site us - university share.">
  <meta name="author" content="Ewen Blandin">

  <!-- IMPLEMENTATION BOOTSTRAP CSS -->
  <link rel="stylesheet" href="{{asset('/css/bootstrap.min.css')}}">
  <link rel="stylesheet" href="{{asset('/css/styleAdd.css')}}">
  <link rel="stylesheet" href="{{asset('/css/hamburgers.css')}}">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <!-- ALTERNATIVE ICONS BOOTSTRAP 3 -->
  <script src="https://unpkg.com/feather-icons"></script>
  <!-- TITRE -->
  <title>{% block title %}University Share - {% endblock %}</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/simple-sidebar.css" rel="stylesheet">

</head>

<body>

  <div class="d-flex toggled" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-secondary border-right justify-content-between align-items-center" id="sidebar-wrapper" style="border:1px solid black;">
      <ul class="list-group list-group-flush" style="color:black;">
        <li class="list-group-item list-group-item-action bg-secondary text-dark">
          <a href="#"><div class="carreIMG">
                <object data="{{asset('/img/$user.png')}}" type="image/png" height="100px" width="100px">
                    <img src="{{asset('/img/logo.png')}}" alt="defaut" height="100px" width="100px">
                </object>
            </div>
          </a>
        </li>
        <li class="list-group-item list-group-item-action bg-secondary text-dark"><a href="#"><div class="line"></div></a></li>
        <li class="list-group-item list-group-item-action bg-secondary text-dark"><a href="#">Accueil</a></li>
        <li class="list-group-item list-group-item-action bg-secondary text-dark"><a href="#">Répertoires</a></li>
        <li class="list-group-item list-group-item-action bg-secondary text-dark"><a href="#">Créer un post</a></li>
        <li class="list-group-item list-group-item-action bg-secondary text-dark"><a href="#">Mes favoris</a></li>
        <li class="list-group-item list-group-item-action bg-secondary text-dark"><a href="#">Classement</a></li>
        {% block admin %}
        <li class="list-group-item list-group-item-action bg-secondary text-dark"><a href="#">Admin</a></li>
        {% endblock %}
        <li class="list-group-item list-group-item-action bg-secondary text-dark">
          <a href="#">
            <button class="btn btn-dark btn-circle btn-lg">
              <i data-feather="log-out"></i>
            </button>
          </a>
        </li>
      </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-secondary border-bottom" style="border:1px solid black;">
        <!--<button class="btn btn-primary" id="menu-toggle"><i data-feather="menu"></i></button>-->
        <button class="hamburger hamburger--elastic" type="button" id="menu-toggle">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>
        {%block search%}
        <form action="" class="search-bar">
          <input type="search" name="search" pattern=".*\S.*" required>
          <button class="search-btn" type="submit">
            <span>Search</span>
          </button>
        </form>
        {%endblock%}
      </nav>

      <div class="container-fluid">
        {%block contenuPage%}{%endblock%}
      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Block JavaScript -->
  <script>
    feather.replace()
  </script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
  <script src="{{asset('/js/bootstrap.min.js')}}" ></script>
  {% block javascripts %}

  {% endblock %}

  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>
  <!--Animation Toggle Menu hamburger-->
  <script>
  // Look for .hamburger
  var hamburger = document.querySelector(".hamburger");
  // On click
  hamburger.addEventListener("click", function() {
    // Toggle class "is-active"
    hamburger.classList.toggle("is-active");
    // Do something else, like open/close menu
  });
</script>

</body>

</html>
