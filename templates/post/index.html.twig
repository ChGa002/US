<!DOCTYPE html>

<title>Post index</title>

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>DatePubli</th>
                <th>Description</th>
                <th>Signale</th>
                <th>EmplacementPhoto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titre }}</td>
                <td>{{ post.datePubli ? post.datePubli|date('Y-m-d') : '' }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.signale ? 'Yes' : 'No' }}</td>
                <td>{{ post.emplacementPhoto }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('post_new') }}">Create new</a>
{% endblock %}
