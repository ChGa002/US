{% extends 'templateBase.html.twig' %}
{% form_theme formUser 'bootstrap_4_layout.html.twig' %}


{% block barreRecherche %} {% endblock %}

{% block titleOnglet %}US - Profil{% endblock %}

{% block titlePage %} Profil : {{ app.user.pseudo }} {% endblock %}

{% block contenuCentral %}

    {{ form_start(formUser) }}
    Description:
    {{ form_widget(formUser.description) }} <br>
    
    Modifier la photo de profil:
    {{ form_widget(formUser.emplacementPhoto) }} <br>

    <button type="submit"  class="btn btn-danger posBD">Enregistrer</button>
    {{ form_end(formUser) }}


{%endblock%}

{% block contenuDroit%} 
 <div class="text-center">
    
    {% if  user.emplacementPhoto == null %}
        <img src="{{asset('/img/avDefault.png')}}" class="img-thumbnail" height="100px" width="100px">
    {% else %}
        <img src="{{user.emplacementPhoto}}" class="img-thumbnail" height="100px" width="100px">
    {% endif %}
    <br>
    <strong>{{app.user.pseudo}}</strong>
    <br> <br>
    
    <a href="{{path('us_profil',{'pseudo':app.user.pseudo})}}"class="btn btn-success mb-2">Retour au profil</a> <br>
</div>

{% endblock %}



